@model ProductCreateVM

@{
    Layout = "_CategoryLayout";
}

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <h2 class="text-info">Add Food</h2>
            </div>

            <div class="row">
                <div class="col-8">
                    <div class="row form-group">
                        <div class="col-4">
                            <label asp-for="Food.ShortContent"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Food.ShortContent" class="form-control" />
                            <span asp-validation-for="Food.ShortContent" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-4">
                            <label asp-for="Food.Description"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Food.Description" class="form-control" />
                            <span asp-validation-for="Food.Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-4">
                            <label asp-for="Food.Address"></label>
                        </div>
                        <div class="col-8">
                            <textarea asp-for="Food.Address" class="form-control"></textarea>
                            <span asp-validation-for="Food.Address" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-4">
                            Image
                        </div>
                        <div class="col-8">
                            <input type="file" name="files" value="" class="form-control" id="uploadBox" />
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-4">
                            <label asp-for="Food.Price"></label>
                        </div>
                        <div class="col-8">
                            <textarea asp-for="Food.Price" class="form-control"></textarea>
                            <span asp-validation-for="Food.Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-4">
                            <label asp-for="Food.CategoryId"></label>
                        </div>
                        <div class="col-8">
                            <select asp-for="Food.CategoryId" asp-items="@Model.CategorySelectList" class="form-control">
                                @*<option disabled selected>Vui lòng chọn Category</option>*@
                            </select>
                            <span asp-validation-for="Food.CategoryId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-4">
                            <label asp-for="Food.ProductTags"></label>
                        </div>
                        <div class="col-8">
                            <select asp-for="@Model.SelectListTagIds" asp-items="@Model.TagSelectList" class="form-control" multiple>
                                <option disabled selected>Vui lòng chọn Tag</option>
                            </select>
                            <span asp-validation-for="Food.ProductTags" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col">
                            <input type="submit" value="Create" class="btn btn-info" onclick="return validateInput()" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>
    @section ScriptsValidate {
        <script>
            function validateInput() {
                console.log(document.getElementById("uploadBox").value);
                if (document.getElementById("uploadBox").value == "") {
                    Swal.fire(
                        'Error!',
                        'Please upload an Image!',
                        'error'
                    )
                    return false;
                }
                return true;
            }
        </script>
    }
