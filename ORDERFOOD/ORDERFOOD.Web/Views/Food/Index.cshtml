@model List<Food>
<div class="container">
    <div>
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Food List</h2>
            </div>

            <div class="col-6 text-right">
                <a asp-controller="Food" asp-action="Create" class="btn btn-primary">
                    Create New Food
                </a>
            </div>
        </div>

        @if (Model.Count() > 0)
        {

            <table id="myTable" class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Food Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            Price
                        </th>

                        <th>
                            Category
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td width="10%">
                                @product.ShortContent
                            </td>
                            <td width="25%">
                                @product.Description
                            </td>
                            <td width="10%">
                                @product.Address
                            </td>
                            <td width="20%">
                                @product.Price
                            </td>
                            <td width="10%">
                                @product.Category.CategoryName
                            </td>
                            <td>
                                <div>
                                    <a asp-controller="Food" asp-action="Edit" asp-route-Id="@product.Id" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                                    <a asp-controller="Food" asp-action="Delete" asp-route-Id="@product.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                                </div>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>



        }
        else
        {
            <p>Không tồn tại thể loại trong database</p>
        }

    </div>
</div>
@section ScriptsValidate{
    <script>
            $(document).ready(function () {
                $('#myTable').DataTable();

            });

    </script>
}